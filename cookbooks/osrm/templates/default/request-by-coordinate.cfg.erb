[global]
environment = 'production'

[modes]
modes: ["<%= @modes.join("\", \"") %>"]

<% @modes.each do |mode| -%>
[<%= mode %>]
servers: ["<%= @moderegs[mode].join("\", \"") %>"]
<% first = true %>
<% @moderegs[mode].each do |modereg| -%>
url_<%= modereg %>: "http://<%= @modeprops[modereg][:host] %>:<%= @modeprops[modereg][:port] %>/route/v1/driving/"
polygon_<%= modereg %>: <%= first ? "None" : @modeprops[modereg][:poly] %>
<% first = false %>
<% end -%>

<% end -%>
